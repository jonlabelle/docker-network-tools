root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,yaml}]
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_size = 4
